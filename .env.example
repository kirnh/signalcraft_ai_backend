# OpenAI API Key (Required)
OPENAI_API_KEY=your-openai-api-key-here

# News API Configuration
# Set NEWS_API_PROVIDER to 'gnews' or 'newsapi'
NEWS_API_PROVIDER=gnews

# GNews API Key (required if using GNews)
GNEWS_API_KEY=your-gnews-api-key-here

# NewsAPI Key (required if using NewsAPI)
NEWSAPI_KEY=your-newsapi-key-here

# Logging Configuration
# Set LOG_LEVEL to: DEBUG, INFO, WARNING, ERROR, or CRITICAL (default: INFO)
LOG_LEVEL=INFO

# Concurrency Configuration (optional)
# MAX_CONCURRENT_NEWS_AGENTS=10
# MAX_CONCURRENT_SENTIMENT_AGENTS=5  # Reduced default to avoid rate limits
# MAX_RETRIES=3  # Maximum retries for rate limit errors (default: 3)
